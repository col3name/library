{% extends 'layout/page.html.twig' %}

 {% block breadcrumbs %}
     {{ include('profile/_breadcrumbs.html.twig', {
         'path': 'admin_page',
         'section': 'Админка',
         'entityId': '',
         'entity': 'а',
         'ditailedPage': 'Администрирование книг',
         'currentPage': ''}) }}
 {% endblock %}

{% block content %}
    <div class="small-12 cell">
        <a href="{{ path('book_new') }}">
            <button class="button">Создать книгу</button>
        </a>
        {#<a href="{{ path('new_book_author') }}">#}
        {#<button class="button">Создать автора книги</button>#}
        {#</a>#}
        {#<a href="{{ path('new_genre') }}">#}
        {#<button class="button">Добавить жанр</button>#}
        {#</a>#}
    </div>
    <div class="small-12 cell">
        <h3>Книги ({{ books|length }})</h3>
        <table class="table">
            <thead>
            <tr>
                <th data-property-name="active" class="  boolean ">
                    Назавние
                </th>
                <th data-property-name="id" class="sorted  integer ">
                    <i class="fi-photo fi-left"></i>Превью
                </th>
                <th data-property-name="id" class="sorted  integer ">
                    <i class="fi-calendar fi-left"></i>Дата добавления
                </th>
                <th><i class="fi-widget fi-left"></i>Действие</th>
            </tr>
            </thead>
            <tbody>
            {% for bookCopy in books %}
                <tr>
                    <td><a href="{{ path('catalog_show', {'id': bookCopy.id}) }}">{{ bookCopy.book.name }}</a></td>
                    <td><img class="sm-image" src="/{{ bookCopy.imagePath }}" alt="image-{{ bookCopy.book.name }}"></td>
                    <td>{{ bookCopy.uploadDate|date('d M y h:m:s') }}</td>
                    <td>
                        <a href="{{ path('book_edit', { 'id': bookCopy.id}) }}">
                            <i class="fi-page-edit font-size-24 fi-left"></i>Изменить</a>

                        {{ include('admin/book/_book-delete.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}