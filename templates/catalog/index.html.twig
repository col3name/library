{% extends 'layout/page.html.twig' %}

 {% block breadcrumbs %}
     {{ include('profile/_breadcrumbs.html.twig', {
         'path': 'catalog_page',
         'section': 'Каталог',
         'entity': '',
         'ditailedPage': '',
         'currentPage': ''}) }}
 {% endblock %}

{% block content %}
    <div class="small-12 cell">
        <div class="grid-container">
            <div class="grid-x grid-padding-x grid-padding-y">
                <aside class="medium-12 large-2 cell">
                    {{ include('catalog/_filter.html.twig') }}
                </aside>
                <div class="medium-12 large-9 cell">
                    <div class="grid-container">
                        <div class="small-12 medium-3 cell">
                            <div id="goods" class="grid-x grid-padding-x grid-padding-y">
                                {% for bookCopy in booksCopy %}
                                    <div class="small-6 medium-4 cell">
                                        {{ include('home/_book-card.html.twig') }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="small-12 cell">
                            {{ include('/catalog/_pagination.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="pagination-template" type="text/template">
        <% if (page > 1) { %>
        <li class="pagination-item" data-page="1"><a href>В начало</a></li>
        <li class="pagination-item" data-page="<%= page-1 %>"><a href>&lt;</a></li>
        <% } %>

        <% for (var i = 1; i <= countPages; i++) { %>
        <li class="pagination-item" data-page="<%= i %>"
        <% if (i == page) { %> class="pagination-active" <% } %>><a href><%= i %></a>
        </li>
        <% } %>

        <% if (nextPage <= countPages) { %>
        <li class="pagination-item" data-page="<%= nextPage %>"><a href>&gt;</a></li>
        <li class="pagination-item" data-page="<%= countPages %>"><a href>В конец</a></li>
        <% } %>
    </script>
{% endblock %}

